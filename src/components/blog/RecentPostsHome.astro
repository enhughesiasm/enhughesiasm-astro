import { getArticles } from './api/fetch_articles';
import RecentArticleCard from './RecentArticleCard.astro';

const posts = (await getArticles()).slice(0, 4);
---

<div class='hidden space-y-6 md:block'>
	<div
		class='items-center justify-center space-x-6 text-center font-serif text-xl'
	>
		<span class='text-3xl'>üó£Ô∏è</span> Recent posts:
	</div>
	<div
		class='mx-auto flex flex-row flex-wrap items-center justify-center gap-y-6 space-x-12 text-center'
	>
		{
			posts.map((post) => (
				<RecentArticleCard post={{ ...post, categories: [] }} />
			))
		}
		<div class='text-6xl'>...</div>
	</div>
</div>
