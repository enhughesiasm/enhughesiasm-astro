---
import type { BookPage } from '../../books';
import { Image } from '@astrojs/image/components';
export type Props = BookPage;

const { key, title, coverImg, linkUrl } = Astro.props;
---

<a href={linkUrl} class='group'>
	<div class='w-24 group-hover:scale-[1.07]'>
		<Image src={coverImg} alt={title} />
	</div>
	<div class='mt-2 text-sm group-hover:font-bold group-hover:text-blue-700'>
		{title}
	</div>
</a>
