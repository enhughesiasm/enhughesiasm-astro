---
export interface Props {
	title: string;
	subtitle: string;
	slug?: string;
}

const { title, subtitle, slug } = Astro.props;
---

<div
	class='card group overflow-hidden border-2 !border-yellow-500 shadow transition ease-in-out odd:bg-zinc-900 even:bg-stone-900 hover:scale-[1.05] hover:!border-zinc-900'
>
	<a class='' href={slug}>
		<div class='card-content flex flex-col justify-between'>
			<h3
				class='px-2 pt-2 text-center font-serif text-lg font-bold text-yellow-500 group-hover:text-lg group-hover:font-bold group-hover:text-white'
			>
				<Fragment set:html={title} />
			</h3>
			<div
				class='hidden text-base group-hover:block group-hover:text-white'
			>
				<Fragment set:html={subtitle} />
			</div>

			<div class='mx-auto w-1/2 group-hover:hidden'>
				<slot name='image' />
			</div>
		</div>
	</a>
</div>

<style>
	:root {
		--border: rgb(250, 207, 67);

		--g1: #f87171;
		--g2: #2563eb;
		--g3: #fbbf24;
	}

	.card {
		aspect-ratio: 1 / 1.6;

		cursor: pointer;
		position: relative;
		width: 20vmin;
	}

	.card:hover:before {
		background-position: 100% 100%;
		transform: scale(1.08, 1.03);
	}

	.card:hover > .card-content {
		background-position: -10% 0%;
	}

	.card:hover > .card-icon {
		color: white;
	}

	.card:hover > .card-content > .card-subtitle > .card-subtitle-word {
		opacity: 1;
		transform: translateY(0%);
		transition: opacity 0ms,
			transform 200ms cubic-bezier(0.9, 0.06, 0.15, 0.9);
	}

	.card:before {
		background: linear-gradient(
			130deg,
			transparent 0% 33%,
			var(--g1) 66%,
			var(--g2) 83.5%,
			var(--g3) 100%
		);
		background-position: 0% 0%;
		background-size: 300% 300%;
		content: '';
		height: 100%;
		left: 0px;
		pointer-events: none;
		position: absolute;
		top: 0px;
		transition: background-position 350ms ease, transform 350ms ease;
		width: 100%;
		z-index: 1;
	}

	.card-content {
		background-image: radial-gradient(#3f3f46 8%, transparent 8%);
		background-position: 0% 0%;
		background-size: 2.5vmin 2.5vmin;
		height: calc(100% - 1vmin);
		padding: 0.5vmin 0.75vmin;
		position: relative;
		transition: background-position 350ms ease;
		width: calc(100% - 0vmin);
		z-index: 2;
	}

	.card-content:hover {
		background-image: radial-gradient(
			rgba(254, 240, 240, 0.553) 8%,
			transparent 8%
		);
	}

	.card-icon {
		top: 0px;
		color: rgba(255, 255, 255, 0.18);
		font-size: 1.5vmin;
		left: 0px;
		margin: 0.5vmin;
		position: absolute;
		transition: color 250ms ease;
		z-index: 2;
	}
</style>
