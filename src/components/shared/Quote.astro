---
import { QuoteMessage } from 'iconoir-react';

export type QuoteData = {
	quote: string[];
	cite: { name: string; link?: string };
};

export type Props = QuoteData & {
	className?: string;
};

const { quote, cite, className } = Astro.props;
---

<blockquote
	class={`flex flex-col items-center text-base justify-center  self-center rounded bg-blue-100 pb-3 pl-3 pr-6 2xl:pr-12 pt-3 ${className}`}
>
	<div class='flex flex-row'>
		<div class='self-start'>
			<QuoteMessage
				className='float-left text-base 2xl:text-xl text-blue-500 mr-4'
			/>
		</div>

		<div>
			{
				quote.map((q, i) => (
					<span
						class={`${quote.length > 1 ? 'first:font-bold' : ''}${
							i > 0 ? 'block' : ''
						}`}>
						{q}
					</span>
				))
			}
		</div>
	</div>
	<cite class='mt-3 block text-right'
		>{
			cite.link ? (
				<a
					class='text-blue-900 hover:text-blue-600'
					target='_blank'
					rel='noopener noreferrer'
					href={cite.link}>
					{cite.name}
				</a>
			) : (
				cite.name
			)
		}</cite
	>
</blockquote>
