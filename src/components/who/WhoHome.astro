---
import WhoHero from './neil/WhoHero.astro';
import AnxietyTile from './tiles/AnxietyTile.astro';
import SpeakingTile from './tiles/SpeakingTile.astro';
import WhoTile from './tiles/WhoTile.astro';
import WriterTile from './tiles/WriterTile.astro';
---

<div class='container m-auto mt-12 grid gap-6'>
	<WhoHero />
	<div class='grid grid-flow-row grid-cols-3 gap-6'>
		<!-- 300 then 100 for start, end -->
		<WhoTile
			title='worrying'
			bgColor='bg-red-200'
			link='/anxiety'
			gradientStartHex='#fca5a5'
			gradientEndHex='#fee2e2'
		>
			<AnxietyTile />
		</WhoTile>
		<WhoTile
			title='writing'
			bgColor='bg-lime-200'
			link='/books'
			gradientStartHex='#bef264'
			gradientEndHex='#ecfccb'
		>
			<WriterTile />
		</WhoTile>
		<WhoTile
			title='speaking'
			bgColor='bg-emerald-200'
			link='/speaking'
			gradientStartHex='#6ee7b7'
			gradientEndHex='#d1fae5'
		>
			<SpeakingTile />
		</WhoTile>
		<WhoTile title='coding' bgColor='bg-teal-200' link='/coding'>.</WhoTile>
		<WhoTile title='comedian-ing' bgColor='bg-purple-200' link='/comedy'>
			.
		</WhoTile>
		<WhoTile title='physicist-ing' bgColor='bg-pink-200' link='/comedy'>
			.
		</WhoTile>
		<WhoTile
			title='teling two truths & a lie'
			bgColor='bg-yellow-200'
			link='/comedy'
		>
			.
		</WhoTile>
		<WhoTile title='TODO' bgColor='bg-green-200' link='/comedy'>.</WhoTile>
	</div>
</div>
