---
import { Image } from '@astrojs/image/components';
import neilHeadshot from '../../../assets/images/neil_hughes_headshot_al.jpg';
---

<div class='flex flex-row items-center justify-center rounded pr-0 font-serif'>
	<Image
		class='rounded-l-xl hover:animate-spin'
		src={neilHeadshot}
		alt='Neil Hughes'
		height={150}
	/>
	<div
		class='inline-flex h-full flex-grow items-center justify-center rounded-r-xl bg-zinc-200 text-center text-3xl'
	>
		<h2 class='text-yellow-700'>
			<span class='text-4xl font-bold'>Neil Hughes</span> is currently...
		</h2>
	</div>
</div>
