---
export interface Props {
	linkUrl: string;
	title: string;
	blurb: string;
	coverImg: any;
}

import { Image } from '@astrojs/image/components';
const { linkUrl, coverImg, title, blurb } = Astro.props;
---

<div class={`group flex rounded-l-3xl bg-green-100 shadow-xl`}>
	{
		coverImg && (
			<figure class='h-full w-1/2'>
				<a href={linkUrl}>
					<Image class='rounded-l-3xl' src={coverImg} alt={title} />
				</a>
			</figure>
		)
	}
	<div class='w-4/5 flex-grow px-3 py-6'>
		<h3
			class={`flex flex-row items-center space-x-3 font-serif text-xl group-hover:font-bold`}
		>
			<a href={linkUrl}>{title}</a>
		</h3>
		<p class='py-3'>{blurb}</p>

		<a href={linkUrl}>
			TODO fix these weird hovers
			<button
				class='rounded-full bg-transparent py-2 px-4 font-bold text-slate-700 hover:bg-blue-700 group-hover:bg-blue-500 group-hover:text-white'
				>learn more</button
			></a
		>
	</div>
</div>
