---
export interface Props {
	linkUrl: string;
	title: string;
	blurb: string;
	buttonText: string;
	coverImg: any;
}

import { Image } from '@astrojs/image/components';
const { linkUrl, coverImg, title, blurb, buttonText } = Astro.props;
---

<div class={`group/book flex rounded-3xl bg-green-100 shadow-xl`}>
	{
		coverImg && (
			<figure class='h-full w-1/2'>
				<a href={linkUrl}>
					<Image class='rounded-l-3xl' src={coverImg} alt={title} />
				</a>
			</figure>
		)
	}
	<div class='flex w-4/5 flex-grow flex-col justify-between px-3 py-3'>
		<h3
			class={`flex flex-row items-center space-x-3 font-serif text-xl font-bold group-hover/book:text-green-700`}
		>
			<a href={linkUrl}>{title}</a>
		</h3>
		<p class='py-3'>{blurb}</p>

		<a href={linkUrl}>
			<button
				class='rounded-full bg-transparent bg-green-200 py-2 px-4 font-bold text-slate-500 hover:!bg-green-500 group-hover/book:animate-bounce-once group-hover/book:bg-green-700 group-hover/book:text-white'
				>{buttonText}</button
			></a
		>
	</div>
</div>
