---
export interface Props {
	linkUrl: string;
	title: string;
	blurb: string;
	buttonText: string;
	coverImg: any;
}

import { Image } from '@astrojs/image/components';
const { linkUrl, coverImg, title, blurb, buttonText } = Astro.props;
---

<div class={`group/book grid grid-cols-2 rounded-3xl bg-green-100 shadow-xl`}>
	{
		coverImg && (
			<figure class=''>
				<a href={linkUrl}>
					<Image
						class='w-1/2 rounded-l-3xl sm:w-1/3 md:w-full'
						src={coverImg}
						alt={title}
					/>
				</a>
			</figure>
		)
	}
	<div
		class='flex flex-grow flex-col items-center justify-center px-3 py-3 lg:px-6'
	>
		<h3
			class={`font-serif text-center hidden 2xl:block text-sm xl:text-lg leading-tight font-bold group-hover/book:text-green-700`}
		>
			<a href={linkUrl}>{title}</a>
		</h3>
		<p class='flex-grow px-3 py-3 text-sm lg:text-base'>{blurb}</p>

		<a href={linkUrl} class='hidden'>
			<button
				class='rounded-full bg-green-200 bg-transparent px-4 py-2 font-bold text-slate-500 hover:!bg-green-500 group-hover/book:animate-bounce-once group-hover/book:bg-green-700 group-hover/book:text-white'
				>{buttonText}</button
			></a
		>
	</div>
</div>
