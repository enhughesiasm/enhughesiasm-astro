---
import { Image } from '@astrojs/image/components';
import micImage from '../../../assets/images/speaking/microphone.jpg';
import { SITE_BASE_URL } from '../../../data/definitions';
import LinkButton from '../../shared/LinkButton.astro';
---

<article>
	<p>
		😁 as well as <span
			class='text-base text-red-500 lg:text-lg 2xl:text-2xl'
			>performing his own standup</span
		>, Neil is available as a comedy consultant to
		<strong class='text-base text-blue-500 lg:text-lg 2xl:text-2xl'
			>help add jokes to your speech</strong
		>
	</p>
	<Image src={micImage} alt='A microphone' class='my-3 rounded' />
	<p class='pt-3 text-right'>
		<LinkButton
			text='get help writing a speech'
			url={`${SITE_BASE_URL}humour-consultant`}
		/>
	</p>
</article>
