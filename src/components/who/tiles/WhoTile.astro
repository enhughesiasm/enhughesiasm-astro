---
export interface Props {
	bgColor: string;
	titleBgColor?: string;
	title: string;
	titleColor?: string;
	link: string;
	gradientStartHex?: string;
	gradientEndHex?: string;
}

const {
	bgColor,
	title,
	titleBgColor = 'bg-transparent',
	titleColor = 'text-zinc-900',
	link,
	gradientStartHex = '#1e293b',
	gradientEndHex = '#000000',
} = Astro.props;
---

<div class={`${bgColor} who-card rounded-lg pb-3 group`}>
	<a href={link}>
		<h3
			class={`py-3 h-16 text-center rounded-lg inline-flex items-center justify-center w-full font-serif text-2xl font-bold group-hover:text-3xl ${titleBgColor} ${titleColor}`}
		>
			{title}
		</h3>
	</a>
	<div class='px-6 pt-3'>
		<slot />
	</div>
</div>

<style define:vars={{ gradientStartHex, gradientEndHex }}>
	.who-card {
		background-image: linear-gradient(
			135deg,
			var(--gradientStartHex),
			var(--gradientEndHex) 30%,
			#ffffff00 60%
		);
		background-size: 400%;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}

	.who-card:is(:hover, :focus-within) h3 {
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.who-card:is(:hover, :focus-within) {
		background-position: 0;
	}
</style>
