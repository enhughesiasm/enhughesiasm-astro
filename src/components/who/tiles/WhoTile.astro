---
export interface Props {
	bgColor: string;
	title: string;
	link: string;
	gradientStartHex?: string;
	gradientEndHex?: string;
}

const {
	bgColor,
	title,
	link,
	gradientStartHex = '#1e293b',
	gradientEndHex = '#18181b',
} = Astro.props;
---

<div class={`${bgColor} who-card rounded p-3 group`}>
	<a href={link}>
		<h3
			class='h-12 text-center font-serif text-2xl font-bold text-yellow-50 group-hover:text-3xl group-hover:text-white'
		>
			{title}
		</h3>
	</a>
	<slot />
</div>

<style define:vars={{ gradientStartHex, gradientEndHex }}>
	.who-card {
		background-image: linear-gradient(
			135deg,
			var(--gradientStartHex),
			var(--gradientEndHex) 30%,
			#00000000 60%
		);
		background-size: 400%;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
			0 2px 4px -2px rgba(0, 0, 0, 0.1);
	}
	.who-card h3 {
		text-shadow: 0px 1px 2px #92400e;
	}
	.who-card:is(:hover, :focus-within) h3 {
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	.who-card:is(:hover, :focus-within) {
		background-position: 0;
	}
</style>
