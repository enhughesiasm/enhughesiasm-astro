---
import sblCover from '../../../assets/images/sblCover.jpg';
import wocCover from '../../../assets/images/wocCover.jpg';
import BookTile from './BookTile.astro';
---

<div class='my-6 space-y-6'>
	<BookTile
		coverImg={wocCover}
		linkUrl='/walking-on-custard'
		title='Walking on Custard'
		blurb='a humorous-helpful guide to life with anxiety'
		buttonText='find out how custard helps with anxiety'
	/>
	<BookTile
		coverImg={sblCover}
		title='The Shop Before Life'
		linkUrl='/shop-before-life'
		blurb='before being born, all humans visit a magical shop and choose what kind of person they will become'
		buttonText='explore the Shop Before Life'
	/>
</div>
