---
import { SEO } from 'astro-seo';
import BaseLayout from '../layouts/BaseLayout.astro';

const mayBeArticle = Astro.url.pathname.includes('articles') !== true;
const slashCount = Astro.url.pathname.split('').filter(char => char === '/').length;

---


<BaseLayout>
	<Fragment slot='seo'>
		<SEO title={'404 - Walking on Custard'} />
	</Fragment>	
	{!mayBeArticle && <div><div transition:name="page-title" class='flex h-full w-full items-center justify-center py-32'>
		<div class='border-r-8 border-r-zinc-700 px-12 text-6xl'>404</div>
		<div class='pl-6 text-3xl'>Not Found</div>
	</div>
	<div class='text-center'>🏗️ Sorry! That doesn't seem to exist.</div>
</div>}
	{ mayBeArticle}
	{slashCount}
	{Astro.url.pathname}
	{mayBeArticle && slashCount ===1 && <a href={`${import.meta.env.BASE_URL}articles${
		Astro.url.pathname
	}`}><div class="mt-6 text-center py-6 bg-blue-500 hover:bg-blue-300 text-white text-3xl">
		Click here to find your article
	</div>	</a>
}
</BaseLayout>
